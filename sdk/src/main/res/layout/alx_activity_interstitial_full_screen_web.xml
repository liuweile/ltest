<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alx_white">

    <com.alxad.widget.AlxAdWebView
        android:id="@+id/alx_interstitial_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.alxad.widget.AlxLogoView
        android:id="@+id/alx_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/alx_interstitial_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/alx_close_icon"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="right|end"
        tools:visibility="visible" />


</FrameLayout>