<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000">

        <ImageView
            android:id="@+id/alx_bn_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:src="@drawable/alx_back" />

        <TextView
            android:id="@+id/alx_head_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/alx_bn_close"
            android:layout_toLeftOf="@+id/alx_bn_close"
            android:layout_toEndOf="@+id/alx_bn_back"
            android:layout_toRightOf="@+id/alx_bn_back"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="marquee"/>

        <ImageView
            android:id="@+id/alx_bn_close"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/alx_close_icon" />

    </RelativeLayout>

    <com.alxad.widget.AlxWebView
        android:id="@+id/alx_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layerType="hardware" />

</LinearLayout>