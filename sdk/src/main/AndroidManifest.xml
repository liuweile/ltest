<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alxad">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.gms.permission.AD_ID"/><!--兼容android12-->

    <!-- Android package visibility setting -->
    <queries>
        <!-- For browser content -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="https" />
        </intent>
        <!-- End of browser content -->

<!--        Android11 对 getInstalledApplications() 或 getInstalledPackages()-->
<!--        <package android:name="包名"/>-->
<!--        <package android:name=""/>-->
    </queries>

    <application>
        <activity android:name=".view.video.AlxVideoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/alx_full_screen"/>

        <activity android:name=".view.interstitial.AlxInterstitialFullScreenWebActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/alx_full_screen"/>

        <activity android:name=".view.AlxWebActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>

    </application>

</manifest>